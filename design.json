{
    "meta": {
      "name": "claude-landing-inspired",
      "version": "1.0.0",
      "description": "Design tokens and component specs to replicate the look-and-feel of the screenshot: airy two-column hero, elegant serif headline, neutral palette with black CTAs and a warm terracotta hero image."
    },
    "breakpoints": {
      "sm": 640,
      "md": 768,
      "lg": 1024,
      "xl": 1280,
      "2xl": 1440
    },
    "layout": {
      "page": {
        "maxWidth": 1280,
        "paddingX": 24,
        "paddingY": 24,
        "background": "colors.base.background"
      },
      "navbar": {
        "height": 64,
        "paddingX": 16,
        "gap": 16,
        "align": "center",
        "linkSpacing": 20
      },
      "hero": {
        "columns": ["2fr", "3fr"],
        "gap": 64,
        "align": "center",
        "minHeight": 640,
        "imageAspect": "3/4",
        "imageRadius": 0,
        "imageShadow": "shadows/soft-xl"
      },
      "footer": {
        "paddingY": 40
      }
    },
    "grid": {
      "columns": 12,
      "gutter": 24,
      "margin": 24
    },
    "spacing": {
      "scale": [0, 2, 4, 8, 12, 16, 20, 24, 32, 40, 48, 64, 80, 96, 128]
    },
    "radii": {
      "xs": 6,
      "sm": 10,
      "md": 14,
      "lg": 20,
      "xl": 28,
      "xxl": 36,
      "pill": 9999
    },
    "shadows": {
      "soft-sm": "0 1px 0 rgba(0,0,0,0.04), 0 2px 10px rgba(0,0,0,0.05)",
      "soft-md": "0 1px 0 rgba(0,0,0,0.04), 0 6px 20px rgba(0,0,0,0.06)",
      "soft-lg": "0 1px 0 rgba(0,0,0,0.04), 0 10px 30px rgba(0,0,0,0.07)",
      "soft-xl": "0 1px 0 rgba(0,0,0,0.04), 0 14px 44px rgba(0,0,0,0.08)"
    },
    "fonts": {
      "display": {
        "stack": "'Canela','Noe Display','Georgia','Times New Roman',serif",
        "weights": { "regular": 400, "medium": 500, "semibold": 600 },
        "lineHeights": { "tight": 1.05, "normal": 1.15 },
        "tracking": { "tight": -0.01, "normal": 0 }
      },
      "sans": {
        "stack": "'Inter','SÃ¶hne','SF Pro Text','Segoe UI',system-ui,-apple-system,sans-serif",
        "weights": { "regular": 400, "medium": 500, "semibold": 600 },
        "lineHeights": { "normal": 1.5, "loose": 1.65 },
        "tracking": { "normal": 0, "wide": 0.01 }
      },
      "mono": {
        "stack": "'IBM Plex Mono','SFMono-Regular',ui-monospace,monospace",
        "weights": { "regular": 400, "medium": 500 }
      }
    },
    "typography": {
      "scaleRem": {
        "h1": 4.0,
        "h2": 2.6,
        "h3": 1.75,
        "body-lg": 1.125,
        "body": 1.0,
        "caption": 0.875,
        "micro": 0.75
      },
      "headings": {
        "h1": {
          "font": "display",
          "weight": "medium",
          "size": "scaleRem.h1",
          "lineHeight": "fonts.display.lineHeights.tight",
          "tracking": "fonts.display.tracking.tight",
          "color": "colors.base.text"
        },
        "h2": {
          "font": "display",
          "weight": "medium",
          "size": "scaleRem.h2",
          "lineHeight": "fonts.display.lineHeights.normal",
          "color": "colors.base.text"
        },
        "h3": {
          "font": "sans",
          "weight": "semibold",
          "size": "scaleRem.h3",
          "lineHeight": "fonts.sans.lineHeights.normal",
          "color": "colors.base.text"
        }
      },
      "body": {
        "font": "sans",
        "weight": "regular",
        "size": "scaleRem.body",
        "lineHeight": "fonts.sans.lineHeights.normal",
        "color": "colors.base.textMuted"
      },
      "link": {
        "font": "sans",
        "weight": "medium",
        "decoration": "none",
        "color": "colors.base.text",
        "hover": { "underline": true, "opacity": 0.85 }
      }
    },
    "colors": {
      "base": {
        "background": "#FAF7F2",
        "surface": "#FFFFFF",
        "text": "#1A1A1A",
        "textMuted": "#3C3A37",
        "border": "#E7E2D9",
        "focus": "#0A84FF"
      },
      "brand": {
        "primary": "#0E0E0E",
        "primaryHover": "#1F1F1F",
        "terracottaHero": "#C06A3D",
        "accentSage": "#6D8B73"
      },
      "decorative": {
        "sprinkleTeal": "#16A6A4",
        "sprinklePurple": "#7C5CE0",
        "sprinkleGreen": "#7EC272",
        "sprinkleCoral": "#FF7A6E"
      },
      "inputs": {
        "bg": "#FFFFFF",
        "border": "#E7E2D9",
        "placeholder": "#8C8880",
        "text": "#1A1A1A",
        "focusRing": "colors.base.focus"
      },
      "cta": {
        "bg": "colors.brand.primary",
        "bgHover": "colors.brand.primaryHover",
        "text": "#FFFFFF"
      },
      "secondaryBtn": {
        "bg": "#FFFFFF",
        "border": "#E7E2D9",
        "text": "colors.base.text"
      },
      "googleBtn": {
        "bg": "#FFFFFF",
        "border": "#E7E2D9",
        "text": "colors.base.text"
      },
      "notice": {
        "muted": "#F2EEE6",
        "mutedText": "#5A5752"
      }
    },
    "components": {
      "navbar": {
        "bg": "transparent",
        "linkColor": "colors.base.text",
        "ctaStyle": "button/primary/sm"
      },
      "hero": {
        "eyebrow": {
          "font": "sans",
          "sizeRem": 0.875,
          "weight": "medium",
          "transform": "none",
          "color": "colors.base.textMuted",
          "marginBottom": 12
        },
        "headline": {
          "use": "typography.headings.h1",
          "maxWidth": 560,
          "marginBottom": 16
        },
        "subcopy": {
          "use": "typography.body",
          "maxWidth": 520,
          "marginBottom": 24
        },
        "authCard": "card/auth"
      },
      "button": {
        "primary": {
          "sm": {
            "paddingX": 16,
            "paddingY": 12,
            "radius": "radii.pill",
            "font": "sans",
            "sizeRem": 0.9375,
            "weight": "medium",
            "bg": "colors.cta.bg",
            "text": "colors.cta.text",
            "hoverBg": "colors.cta.bgHover",
            "shadow": "shadows.soft-sm"
          },
          "md": {
            "paddingX": 20,
            "paddingY": 14,
            "radius": "radii.pill",
            "font": "sans",
            "sizeRem": 1.0,
            "weight": "medium",
            "bg": "colors.cta.bg",
            "text": "colors.cta.text",
            "hoverBg": "colors.cta.bgHover",
            "shadow": "shadows.soft-md"
          }
        },
        "secondary": {
          "md": {
            "paddingX": 20,
            "paddingY": 14,
            "radius": "radii.pill",
            "font": "sans",
            "sizeRem": 1.0,
            "weight": "medium",
            "bg": "colors.secondaryBtn.bg",
            "text": "colors.secondaryBtn.text",
            "border": { "color": "colors.secondaryBtn.border", "width": 1 },
            "shadow": "shadows.soft-sm",
            "hoverBg": "#FAFAFA"
          }
        }
      },
      "input": {
        "text": {
          "height": 48,
          "paddingX": 16,
          "radius": "radii.md",
          "bg": "colors.inputs.bg",
          "text": "colors.inputs.text",
          "placeholder": "colors.inputs.placeholder",
          "border": { "color": "colors.inputs.border", "width": 1 },
          "focus": { "ring": "colors.inputs.focusRing", "ringWidth": 2 }
        }
      },
      "card": {
        "base": {
          "bg": "colors.base.surface",
          "radius": "radii.lg",
          "padding": 20,
          "border": { "color": "colors.base.border", "width": 1 },
          "shadow": "shadows.soft-lg"
        },
        "auth": {
          "extends": "card/base",
          "width": 360,
          "gap": 12
        }
      },
      "authBox": {
        "googleButton": {
          "extends": "button/secondary/md",
          "bg": "colors.googleBtn.bg",
          "borderColor": "colors.googleBtn.border",
          "iconSize": 18
        },
        "divider": {
          "text": "OR",
          "textColor": "colors.base.textMuted",
          "ruleColor": "colors.base.border",
          "marginY": 12
        },
        "emailRow": {
          "input": "input/text",
          "submit": "button/primary/md",
          "gap": 12
        },
        "legal": {
          "font": "sans",
          "sizeRem": 0.75,
          "color": "colors.base.textMuted",
          "marginTop": 8
        }
      }
    },
    "illustration": {
      "heroBackdrop": "colors.brand.terracottaHero",
      "treatment": "studio-clean",
      "sprinkles": [
        "colors.decorative.sprinkleTeal",
        "colors.decorative.sprinklePurple",
        "colors.decorative.sprinkleGreen",
        "colors.decorative.sprinkleCoral"
      ]
    },
    "motion": {
      "duration": { "fast": 120, "base": 200, "slow": 300 },
      "easing": { "standard": "cubic-bezier(0.2, 0.6, 0.2, 1)" },
      "hoverLift": { "y": -1, "shadow": "shadows.soft-md" }
    },
    "states": {
      "focusRing": { "color": "colors.base.focus", "width": 2, "offset": 2 },
      "disabledOpacity": 0.45,
      "activeOpacity": 0.9
    }
  }